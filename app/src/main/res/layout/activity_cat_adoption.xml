<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    tools:context="com.example.android.prasikuv11.FindCatAdoptionActivity">

    <Spinner
        android:id="@+id/cat_adoption_province"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>

    <Spinner
        android:id="@+id/cat_adoption_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cat_adoption_gender"
        android:textAllCaps="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">
        <RadioButton
            android:id="@+id/cat_adoption_male"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Male"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/cat_adoption_female"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Female"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cat_adoption_health"
        android:textAllCaps="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">
        <RadioButton
            android:id="@+id/cat_adoption_vaccine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Vaccine"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/cat_adoption_steril"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Spay/ Neuter"
            android:layout_weight="1"/>
    </LinearLayout>
    <Button
        android:id="@+id/cat_adoption_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cat_adoption_search"
        android:textAllCaps="true"/>
</LinearLayout>
